@model IEnumerable<MyModel_CodeFirst.Models.Book>

@{
    ViewData["Title"] = "書籍列表";
}

<div class="container">
    <h2 class="text-center mb-4">書籍列表</h2>

    <p>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle"></i> 新增書籍
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PublishDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublishDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.BookId">
                                    <i class="bi bi-info-circle"></i> 詳細
                                </a>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.BookId">
                                    <i class="bi bi-pencil"></i> 編輯
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.BookId">
                                    <i class="bi bi-trash"></i> 刪除
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>